<%= form_with(model: report, local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h3> Contact </h3>
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Requestor E-mail:</label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.text_field :requestor, class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Requestor Telephone</label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.text_field :requestor_telephone, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Business Contact Name</label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.text_field :business_contact, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Business Contact Telephone</label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.text_field :business_contact_telephone, class: "form-control" %>
      </div>
    </div>

    <h3>Basic Information</h3>
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Date Needed:<br><em>Subject to approval</em></label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.date_field :date_requestor_target, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Report Title: <br><em>Brief Description</em></label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Description / Purpose:</label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.text_area :description, class: "form-control" %>
      </div>
    </div>


    <div class="form-row">
      <div class="col-sm-5 col-md-5 col-lg-3">
        <label for="validationDefault01">Date From:</label>
        <%= form.date_field :date_from, class: "form-control" %>
      </div>
      <div class="col-sm-5 col-md-5 col-lg-3">
        <label for="validationDefault02">Date To:</label>
        <%= form.date_field :date_to, class: "form-control" %>
      </div>
    </div>
    <hr>
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Output Type:</label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.select(:output, [
        ["Data Extract","Data Extract"],
        ["Epic Report","Epic Report"],
        ["Tableau Report","Tableau Report"]],
        {include_blank:true}, class: "form-control")%>
      </div>
    </div>
    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Output Location:</label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.select(:output_location, [
        ["Email","Email"],
        ["FTP","FTP"],
        ["Network Folder","Network Folder"]],
        {include_blank:true}, class: "form-control") %>
        <%= form.text_area :output_location_notes, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Format:</label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.select(:format, [
        ["Excel","Excel"],
        ["PDF","PDF"],
        ["Tableau","Tableau"],
        [".csv",".csv"],
        [".txt","txt"]],
        {include_blank:true}, class: "form-control") %>
      </div>
    </div>

    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Frequency:</label>
      <div class="col-sm-10 col-md-10 col-lg-5">
        <%= form.select(:frequency, [
        ["One Time (set dates)","One Time (set dates)"],
        ["On Demand","On Demand"],
        ["Daily","Daily"],
        ["Weekly","Weekly"],
        ["Monthly","Monthly"],
        ["Quarterly","Quarterly"],
        ["Yearly","Yearly"]],
        {include_blank:true}, class: "form-control") %>
      </div>
    </div>

  <h2>Research Requests</h2>
  For research related requests, please complete the following:
  <br><br>

<div class="form-group form-check">
  <input type="checkbox" name="report[is_research]" id="is_research" value="true"  class="form-check-input">
  <label for="is_research"><span>Tag as Research Request</span></label>
</div>
<br><br>

    output_fields
    sort_fields
    groupings
    metrics
    filter_criteria
    parameter_prompts
    access

    <div class="actions">
      <%= form.submit %>
    </div>

<% end %>
