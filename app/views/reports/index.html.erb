<p id="notice"><%= notice %></p>

<h1>Report Request Summary</h1>

[Open/On-Hold] [Completed] [Cancelled] [All]

<br><br><br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Submitted</th>
      <th scope="col">Requestor</th>
      <th scope="col">Request</th>
      <th scope="col">Status</th>
      <th scope="col">Assigned</th>
      <th scope="col">Actions</th>

    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
    <tr>
      <td scope="row"><%= report.created_at.strftime("%m/%d/%Y") %></td>
      <td scope="row">
        <%= report.requestor %><br>
        <%= report.requestor_telephone %>
      </td>
      <td><% if report.is_research == true %><button type="button" class="btn btn-warning btn-sm">Research</button> <% end %><%= link_to report.title, report %><br>

          <%= report.description %></td>
      <td>Not Started</td>
      <td>MEE: Fran</td>

      <td><%= link_to 'Edit', edit_report_path(report) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
